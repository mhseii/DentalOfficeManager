<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
			 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
			 xsi:schemaLocation="http://java.sun.com/xml/ns/persistence 
								 http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
			 version="2.0">

	<persistence-unit name="registros" >
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<class>br.com.dentalofficemanager</class>
		<properties>
		
			<!-- driver location -->
			<!-- <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.driver"/>
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost/dentalofficemanager"/> -->
			
			<!-- access to DB -->
			<!-- <property name="javax.persistence.jdbc.user" value="root"/>
			<property name="javax.persistence.jdbc.password" value="admin123"/> -->
			
			<!-- dialect -->
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDialect"/>
			<property name="hibernate.show_sql" value="true"/>
			<property name="hibernate.format_sql" value="true"/>
			<property name="hibernate.hbm2dll.auto" value="update"/>
		</properties>
	</persistence-unit>
</persistence>