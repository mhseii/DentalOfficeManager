<project xmlns="http://maven.apache.org/POM/3.1.4" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-3.1.4.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>DentalOfficeManager</groupId>
	<artifactId>DentalOfficeManager</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<packaging>war</packaging>
	<build>
		<sourceDirectory>src</sourceDirectory>
		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.1</version>
				<configuration>
					<source>1.7</source>
					<target>1.7</target>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-war-plugin</artifactId>
				<version>2.4</version>
				<configuration>
					<warSourceDirectory>WebContent</warSourceDirectory>
					<failOnMissingWebXml>false</failOnMissingWebXml>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<properties>
		<org.springframework.version>4.3.9.RELEASE</org.springframework.version>
		<org.springframework-security.version>4.2.3.RELEASE</org.springframework-security.version>
		<commons-logging.version>1.2</commons-logging.version>
		<slf4j.version>1.7.5</slf4j.version>
		<log4j.version>1.2.17</log4j.version>
		<java-servlet.version>3.1.0</java-servlet.version>
		<java-jsp.version>2.1</java-jsp.version>		
		<java-jstl.version>1.2</java-jstl.version>
		<java-validation.version>1.1.0.Final</java-validation.version>
		<joda-time.version>2.7</joda-time.version>
		<fasterxml.classmate.version>1.1.0</fasterxml.classmate.version>
		<fasterxml.jackson.version>2.8.5</fasterxml.jackson.version>
		<codehaus.jackson.version>1.9.12</codehaus.jackson.version>
		<mysql-connector.version>5.1.6</mysql-connector.version>
		<commons-dbcp.version>1.4</commons-dbcp.version>
		<commons-pool.version>1.5.4</commons-pool.version>
		<hibernate.version>4.3.0.Final</hibernate.version>
		<hibernate-jpa.version>1.0.0.Final</hibernate-jpa.version>
		<hibernate-annotations.version>4.0.4.Final</hibernate-annotations.version>
		<hibernate-validator.version>5.1.0.Final</hibernate-validator.version>
	</properties>

